<% provide :title, "Career" %>

<div class="container">
  <p id="notice"><%= notice %></p>

  <div class="col-md-2">
    <% if current_user && (current_user.has_role? :admin) %>
      <%= link_to 'New Career', new_career_path, class: "btn btn-default" %>
    <% end %>
  </div>

  <div class="col-md-8">
    <div class="well">
      <table>
        <thead>
          <tr>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @careers.each do |career| %>
            <tr>
              <td><%= raw career.content %></td>
              <% if current_user && (current_user.has_role? :admin) %>
                <td><%= link_to 'Show', career %></td>
                <td><%= link_to 'Edit', edit_career_path(career) %></td>
                <td><%= link_to 'Destroy', career, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              <% end %>

            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="col-md-2">

  </div>
</div>
