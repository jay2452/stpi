<% provide :title, "Digital India" %>

<div class="container-fluid">
  <p id="notice"><%= notice %></p>
  <div class="col-md-2">
    <% if current_user && (current_user.has_role? :admin) %>
      <%= link_to 'New Extra', new_extra_path, class: "btn btn-default" %>
    <% end %>
  </div>

  <div class="col-md-8">
    <div class="well">
      <table>
        <thead>
          <tr>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @extras.each do |extra| %>

            <tr>
              <% if current_user && (current_user.has_role? :admin) %>
                <%= link_to 'Show', extra %>
                <%= link_to 'Edit', edit_extra_path(extra) %>
                <%= link_to 'Destroy', extra, method: :delete, data: { confirm: 'Are you sure?' } %>
              <% end %>
              <td><%= raw extra.content %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="col-md-2">

  </div>
</div>
