<% provide :title, "Consultancies" %>
<p id="notice"><%= notice %></p>
<!--

 -->
<div class="container-fluid">
  <div class="col-md-2">
    <% if current_user && (current_user.has_role? :admin) %>
      <%= link_to 'New Consultancy', new_consultancy_path %>
    <% end %>
  </div>

  <div class="col-md-8">
    <div class="well">
      <table>
        <thead>
          <tr>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @consultancies.each do |consultancy| %>
            <tr>
              <td><%= raw consultancy.content %></td>
              <% if current_user && (current_user.has_role? :admin) %>
                <td><%= link_to 'Show', consultancy %></td>
                <td><%= link_to 'Edit', edit_consultancy_path(consultancy) %></td>
                <td><%= link_to 'Destroy', consultancy, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <br>
  </div>

  <div class="col-md-2">

  </div>
</div>
