<% provide :title, "News and Events" %>
<div class="container-fluid">
  <div class="col-md-3">

  </div>

  <div class="col-md-6">
    <div class="table-responsive">
       <table class="table table-hover">
         <thead>
           <h4 align="center">News and events
             <% if current_user && (current_user.has_role? :admin) %>
              (<%= link_to "Add", new_feed_path %>)
             <% end %>
            </h4>
         </thead>
         <tbody>
           <% @feeds.each do |feed| %>
             <tr>
               <% if current_user && (current_user.has_role? :admin) %>
                 <td><%= link_to 'Edit', edit_feed_path(feed) %></td>
                 <td><%= link_to 'Destroy', feed, method: :delete, data: { confirm: 'Are you sure?' } %></td>
               <% end %>
               <td><%= raw feed.topic %></td>
               <td> </td>
             </tr>
           <% end %>
         </tbody>
       </table>
    </div>
  </div>

  <div class="col-md-3">

  </div>
</div>
